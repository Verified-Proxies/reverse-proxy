ssl                  on;
ssl_certificate      /etc/ssl/certs/cert.crt;
ssl_certificate_key  /etc/ssl/certs/cert.key;
ssl_session_timeout  5m;
ssl_protocols SSLv3 TLSv1 TLSv1.1 TLSv1.2;
ssl_ciphers 'ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES128-SHA256::ECDHE-RSA-AES256-SHA256:ECDHE-RSA-AES128:ECDHE-RSA-AES256:DHE-RSA-AES128-SHA:DHE-RSA-AES256-SHA:RC4-SHA';
ssl_prefer_server_ciphers   on;

